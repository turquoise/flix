<header>
  <h1>Sign In</h1>
</header>

<p>
  No account yet? <%= link_to 'Sign up!', signup_path %>
</p>

<%= form_tag(session_path) do %>
  <fieldset>
    <ol>
      <li>
        <%= label_tag :email %>
        <%= email_field_tag :email, nil , required: true %>
      </li>
      <br/>

      <li>
        <%= label_tag :password %>
        <%= password_field_tag :password, nil , required: true %>
      </li>
      <br/>
      <p>
      	<%= submit_tag 'Sign In' %>
      </p>
    </ol>
  </fieldset>
<% end %>